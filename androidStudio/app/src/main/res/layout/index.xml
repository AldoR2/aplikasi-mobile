<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Navbar -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navbar"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- About Section -->
    <LinearLayout
        android:id="@+id/about_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/navbar"
        android:padding="16dp"
        android:layout_above="@id/footer"> <!-- Ensures content stays above the footer -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the About section where you can add information about your app."
            android:textSize="14sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Button -->
    <Button
        android:id="@+id/button_oke"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Oke"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_below="@id/about_section"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/footer"/><!-- Keeps button above footer -->

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:padding="16dp"
        android:layout_alignParentBottom="true"> <!-- Pins the footer to the bottom -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Footer"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2024 Your Company"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </LinearLayout>

</RelativeLayout>
